{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "lint:vscode",
      "problemMatcher": {
        "base": "$tslint5",
        "fileLocation": "absolute",
        "owner": "tslint-task"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "lint:fix",
      "problemMatcher": {
        "base": "$tslint5",
        "fileLocation": "absolute",
        "owner": "tslint-task"
      },
    }
  ]
}